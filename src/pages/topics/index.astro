---
import Layout from "../../layouts/Page.astro";
import TopicList from "../../components/TopicList.astro";
---

<Layout
  title="Topics"
  description="An overview of all the various topics on our blog."
>
  <h1>All the topics from our blog</h1>
  <TopicList topics="all" />
</Layout>

<style scoped>
  ul {
    list-style-type: none;
    padding: unset;
  }
  ul li {
    display: flex;
  }
  ul li :global(time) {
    flex: 0 0 130px;
    font-style: italic;
    color: #595959;
  }
  ul li a:visited {
    color: #8e32dc;
  }
</style>
