---
import type { HTMLAttributes } from "astro/types";
import HeaderLink from "./HeaderLink.astro";

type Props = HTMLAttributes<"a"> & {
  linkText: string;
};

const { href, class: className, linkText } = Astro.props;
---

<HeaderLink href={href} class={className}>
  {linkText}
  <svg
    xmlns="http://www.w3.org/2000/svg"
    fill="none"
    viewBox="0 0 24 24"
    stroke-width="1.5"
    stroke="currentColor"
    class="ml-1 hidden w-3 md:block"
  >
    <path
      stroke-linecap="round"
      stroke-linejoin="round"
      d="M19.5 8.25l-7.5 7.5-7.5-7.5"></path>
  </svg>

  <ul
    slot="dropdown"
    class="absolute left-0 top-full m-0 hidden w-52 list-none bg-header p-0 px-2 md:group-hover:block"
  >
    <slot />
  </ul>
</HeaderLink>
